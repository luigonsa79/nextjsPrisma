generator client {
  provider = "prisma-client-js"
}
// datasource db {
//   provider = "postgresql"
//   url      = env("DATABASE_URL")
// }
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// MODELO TABLAS

model producto {
  id Int @id @default(autoincrement())
  nombre String
  precio Float
  imagen String
  idCategoria Int
  relCategoria categoria @relation(fields: [idCategoria], references: [id])
}

model categoria {
  id Int @id @default(autoincrement())
  nombre String
  icono String? //? opcional
  relProductos producto[]
}

model orden {
  id Int @id @default(autoincrement())
  nombre String
  fecha String
  total Float
  pedido Json
}